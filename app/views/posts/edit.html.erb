<h1>Edit Listing</h1>
<%= form_for(@post) do |f| %>
	<div class="field">
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</div>
	<div class="field">
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	<div class="field">
		<%= f.label :image %><br />
		<%= f.text_field :image %>
	<div class="field">
		<%= f.label :source %><br />
		<%= f.text_field :source %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
		